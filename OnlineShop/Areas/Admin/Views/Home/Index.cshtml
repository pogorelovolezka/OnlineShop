@using OnlineShop.Domain.Entities
@model IQueryable<ProductItem>
@{
    string strTitle = "Панель администратора";
    ViewBag.Title = strTitle;
}

<div class="module">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <div>
                    <h2>@strTitle</h2>
                    <div>
                        <h3>Наши услуги</h3>
                        <div class="div-box">
                            <a asp-area="Admin" asp-controller="ProductItem" asp-action="Edit" asp-route-id="">Добавить товар</a>
                        </div>
                        @if (Model.Any())
                        {
                            <div>
                                @foreach (ProductItem entity in Model)
                                {
                                    <div>
                                        <a asp-area="Admin" asp-controller="ProductItem" asp-action="Edit" asp-route-id="@entity.Id">редактировать</a>
                                        |
                                        <form style="display: inline-block;" id="form-@entity.Id" asp-area="Admin" asp-controller="ProductItem" asp-action="Delete" method="post">
                                            <input type="hidden" name="id" value="@entity.Id">
                                            <a href="#" onclick="document.getElementById('form-@entity.Id').submit();">удалить</a>
                                        </form>
                                        |
                                        <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-id="@entity.Id">
                                            @($"{entity.Title}")
                                        </a>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                    <div class="div-box">
                        <h3>Редактировать страницы сайта</h3>
                        <a asp-area="Admin" asp-controller="PageItem" asp-action="Edit" asp-route-codeWord="PageIndex">Главная</a>
                        <a asp-area="Admin" asp-controller="PageItem" asp-action="Edit" asp-route-codeWord="PageServices">Наши товары</a>
                        <a asp-area="Admin" asp-controller="PageItem" asp-action="Edit" asp-route-codeWord="PageContacts">Контакты</a>
                    </div>
                    <div class="div-box">
                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                            <input type="submit" value="Выйти" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>